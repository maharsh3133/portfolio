<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
<main class="container">
    <!-- MESSAGE AREA -->
        <div class="row d-flex justify-content-center align-items-center" style="margin-top:200px;">
            <div class="offset md-4 col-md-4">
                <h1 class="header_title wow fadeInUp text-center" data-wow-duration="1.3s" data-wow-delay="0.5s" style="margin-bottom:35px;">Login</h1>
                <form method="POST" autocomplete="off">
                    <div class="form-group">
                        <input type="text" class="form-control" name="username" placeholder="Enter Username" id="username" required autofocus/>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Enter Password" id="password" required />
                    </div>
                    <div class="form-group text-center" style="margin-top:35px;">
                        <input type="submit" class="btn btn-primary rounded-pill pt-2 pb-2 pr-5 pl-5 text-light"  style="background-color:#00a78e" value="Login"/>
                        <a href="login" ><input type="button" class="btn btn-secondary rounded-pill pt-2 pb-2 pr-5 pl-5 text-light" value="Cancel"/></a>
                    </div>
                    <%if(message.length>0){%>
                        <div class="alert alert-danger">
                    <%=message%>
                    </div>
                    <%}%>
                </form>
            </div>
        </div>
</main>
<%-include ../partials/footer.ejs%>